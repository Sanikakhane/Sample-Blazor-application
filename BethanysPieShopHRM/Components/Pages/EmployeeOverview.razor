@page "/employeeoverview"
@* @rendermode InteractiveServer *@
<h1>Employee Overview</h1>

@attribute [StreamRendering(true)]

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <QuickViewPopup Employee="_selectEmployee"></QuickViewPopup>
    <div class="row">
        @foreach(var employee in Employees)
        {
            <ErrorBoundary>
                <ChildContent>
                    <div class="col-6 col-lg-4 col-xl-3 col-xxl-3">
                        <EmployeeCard Employee="employee" EmployeeQuickViewClicked="ShowQuickViewPopup"></EmployeeCard>
                    </div>
                </ChildContent>
                <ErrorContent>
                    <p class="errorUI">Invalid employee!</p>
                </ErrorContent>
            </ErrorBoundary>
           
        }
    </div>
}
